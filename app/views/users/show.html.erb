});
</script>
<style>
button {
    margin: 0 auto 5px auto;
    width: 300px;
    height: 35px;
    border: 0 none;
    font-weight: bold;
    text-align: center;
    color: #fff;
}
</style>
<head>
<body>
<% if notice %>
  <%= notice %>
<% end %>
<% provide(:title, "User Info") %>


<h1>Listing Your Drivers</h1>
<div>
    <button id="show">List Your Drivers</button>
    <button id="hide">Hide Your Drivers</button>
</div>
<table class="drivers">
<% @drivers.each do |driver| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td class="list_description">
      <dl>
        <dt>Departure: <%= driver.departure %></dt>
        <dt>Destination: <%= driver.destination %></dt>
        <dt>Price: <%= driver.price %></dt>
        <dt>Depart_time: <%= driver.depart_time %></dt>
      </dl>
    </td>
    <td class = "list_action">
      <%= link_to 'Show', driver %><br/>
      <%= link_to 'Edit', edit_driver_path(driver) %><br/>
      <%= link_to 'Destroy', driver, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

