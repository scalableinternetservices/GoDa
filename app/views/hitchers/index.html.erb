<% provide(:title, "Hitchers") %>

<% if notice %>
  <p class="notice"><%= notice %></p>
<% end %>

<h1>Listing Hitcher Posts</h1>

<%= form_for @search, :url => "/hitchers/index" do |f|%>
 <div class="row">
  <div class="col-lg-1">
    <%= f.label :departure %><class="form-control" placeholder=".col-lg-1">
  </div>
  <div class="col-lg-3">
    <%= f.text_field :departure %><class="form-control" placeholder=".col-lg-3">
  </div>
  <div class="col-lg-1">
    <%= f.label :destination %><class="form-control" placeholder=".col-lg-1">
  </div>
  <div class="col-lg-3">
    <%= f.text_field :destination %><class="form-control" placeholder=".col-lg-3">
  </div>
  <div class="col-lg-1">
    <%= f.submit :Search%><class="form-control" placeholder=".col-lg-1">
  </div>
 </div>
<% end %>

<table>
<% @hitchers.each do |hitcher| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td class="list_description">
      <dl>
        <dt>Departure: <%= hitcher.departure %></dt>
        <dt>Destination: <%= hitcher.destination %></dt>
        <dt>Depart_time: <%= hitcher.depart_time %></dt>
        <dt>hitvher numbers: <%= hitcher.num %></dt>
      </dl>
    </td>
    <td>
      <%= link_to 'Show Details', hitcher %><br/>
      <br/>
      <dt><%= button_to 'Accept this hitcher', takes_path(hitcher_id: hitcher) %></dt>
    </td>
  </tr>
<% end %>
</table>
