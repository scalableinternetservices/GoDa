    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :depart_time %><br>
    <%= f.text_field :depart_time %>
  </div>
  <div class="field">
    <%= f.label :estimated_arrival_time %><br>
    <%= f.text_field :estimated_arrival_time %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows:6 %>
  </div>
  <div class="field">
    <%= f.label :car_type %><br>
    <%= f.text_field :car_type %>
  </div>
  <div class="field">
    <%= f.label :passenger_num %><br>
    <%= f.text_field :passenger_num %>
  </div>
  <div class="field">
    <%= f.label :contact_info %><br>
