<%= form_for(:session, url: login_path) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
 
